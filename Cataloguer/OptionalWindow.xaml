        <Button x:Name="Button_Music" Content="Music" HorizontalAlignment="Left" VerticalAlignment="Top" Width="186" Margin="196,218,0,0" Height="114" FontFamily="Corbel" FontWeight="Bold" FontSize="48" Click="Button_Music_Click"/>

    </Grid>
